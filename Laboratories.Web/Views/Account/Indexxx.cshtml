@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@Laboratories.Web.Resources.General.LaboratoryUpdate </title>

    <!-- Bootstrap -->
    <link href="~/Design/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Design/vendors/bootstrap-rtl/dist/css/bootstrap-rtl.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Design/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Design/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Design/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Design/build/css/custom.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <a class="hiddenanchor" id="reset"></a>
        @model Laboratories.Domain.User
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "m-t" }))
                    {
        <h1> @Laboratories.Web.Resources.General.SigniIn </h1>
                        <div>
                            @Html.TextBoxFor(a => a.usr_arName, htmlAttributes: new {@class = "form-control", placeholder =Laboratories.Web.Resources.General.UserName, required = "" })

                            @*<input type="text" class="form-control" placeholder="رقم المستخدم" required="" />*@
                        </div>
                                        <div>
                                            @Html.PasswordFor(a => a.usr_pass, htmlAttributes: new { @class = "form-control", placeholder = Laboratories.Web.Resources.General.PassWord, required = "" })
                                            @*<input type="password" class="form-control" placeholder="كلمة المرور" required="" />*@
                                        </div>
                                                        <div>
                                                            <button type="submit" class="btn btn-default submit"> @Laboratories.Web.Resources.General.LogIn </button>

                                                            @*<a class="reset_pass" href="#reset">نسيت كلمة المرور؟</a>*@
                                                        </div>

                                                                        <div class="clearfix"></div>}
                </section>
            </div>


        </div>
    </div>
</body>
</html>
