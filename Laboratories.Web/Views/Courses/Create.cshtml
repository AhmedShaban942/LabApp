@model Laboratories.Domain.Course

@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Create;
}

<h2> @Laboratories.Web.Resources.General.Create</h2>
@using (Html.BeginForm("Create", "Courses", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 align="center" class="panel-title ">
        <strong style="text-align:center;color:red">@Laboratories.Web.Resources.General.courses </strong>
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.arName
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cors_arName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cors_arName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.enName
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cors_enName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cors_enName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.Item.itm_level
        </label>
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.cors_level, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.cors_level, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.Item.itm_term
        </label>
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.cors_term, htmlAttributes: new { @class = "form-control selector" })
            @Html.ValidationMessageFor(model => model.cors_term, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.Item.schooltype
        </label>
        <div class="col-md-10">

            @Html.EnumDropDownListFor(model => model.cors_department, htmlAttributes: new { @class = "form-control selector" })
            @Html.ValidationMessageFor(model => model.cors_department, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.Experiment.experimentNum

        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cors_exprNum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cors_exprNum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Laboratories.Web.Resources.General.Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
