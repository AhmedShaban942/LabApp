@using PagedList.Mvc;
@model PagedList.IPagedList<Laboratories.Domain.School>

@{
    ViewBag.Title = Laboratories.Web.Resources.General.Schools;
}

<hr />
<hr />
<h2 align="center" class="panel-title ">
    <strong style="text-align:center;color:darkblue">@Laboratories.Web.Resources.General.Schools </strong>
</h2>
<p>
    @Html.ActionLink(@Laboratories.Web.Resources.General.CreateNew, "Create", "Schools", null, new { @class = "btn btn-info" })
</p>
<div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <tr>
            <th>
                @Laboratories.Web.Resources.General.Complexes
            </th>
            <th>
                @Laboratories.Web.Resources.General.arName
            </th>

            <th>
                @Laboratories.Web.Resources.General.enName
            </th>
            <th>
                @Laboratories.Web.Resources.General.phon
            </th>
            <th>
                @Laboratories.Web.Resources.General.email
            </th>
            <th>
                @Laboratories.Web.Resources.General.address
            </th>
            <th>
                @Laboratories.Web.Resources.Item.schooltype
            </th>
            <th>
                @Laboratories.Web.Resources.Item.schooldepartment
            </th>
            <th>
                @Laboratories.Web.Resources.General.photo
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_complex.comp_arName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_arName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_enName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_phon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sch_department)
                </td>
                <td>
                    @if (item.sch_image != null)
                    {

                        @Html.Raw("<img style=\"width: 70px; height: 70px; \" src=\"data:image/jpeg;base64," + @Convert.ToBase64String(item.sch_image) + "\"  />");
                    }

                </td>

                <td>
                    @Html.ActionLink(@Laboratories.Web.Resources.General.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink(@Laboratories.Web.Resources.General.details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink(@Laboratories.Web.Resources.General.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
<!--Code to show curent page and page number-->
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))