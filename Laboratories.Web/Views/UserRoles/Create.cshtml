@model Laboratories.Domain.UserRole
@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Create;
}

<h2> @Laboratories.Web.Resources.General.Create</h2>
@using (Html.BeginForm("Create", "UserRoles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center" class="panel-title ">
            <strong style="text-align:center;color:red">@Laboratories.Web.Resources.General.Roles </strong>
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.arName
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.role_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.role_name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.enName
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.role_enName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.role_enName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Laboratories.Web.Resources.General.Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
