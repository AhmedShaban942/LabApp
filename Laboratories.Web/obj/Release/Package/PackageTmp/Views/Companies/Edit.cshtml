@model Laboratories.Domain.Company

@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Edit;
}

<h2> @Laboratories.Web.Resources.General.Edit</h2>

@using (Html.BeginForm("Edit", "Companies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 align="center" class="panel-title ">
        <strong style="text-align:center;color:red">@Laboratories.Web.Resources.General.Company </strong>
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.com_image)
    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.arName</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.com_arName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.com_arName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.enName</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.com_enName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.com_enName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.phon</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.com_phon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.com_phon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.com_email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.com_email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.address</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.com_address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.com_address, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.photo
        </label>
        <div class="col-md-10">
            <input type="file" name="com_image"  accept="image/png, image/gif, image/jpeg"/>
        </div>
    </div>
  
    <div class="form-group" hidden>
        <label class="control-label col-md-2">@Laboratories.Web.Resources.General.isActive</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsAvtive)
                @Html.ValidationMessageFor(model => model.IsAvtive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Laboratories.Web.Resources.General.Edit" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>
