@model Laboratories.Domain.Experiments

@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Edit;

}




@using (Html.BeginForm("Edit", "Experiments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center" class="panel-title ">
            <strong style="text-align:center;color:red">@Laboratories.Web.Resources.General.courses </strong>
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.expr_year)
        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.arName
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_arName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_arName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.enName
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_enName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_enName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentType
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_tpye, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_tpye, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentPage
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_page, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_page, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentchapter
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_chapter, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_chapter, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentCourse
            </label>
            <div class="col-md-10">
                @Html.DropDownList("expr_corsId", null, htmlAttributes: new { @class = "form-control selector" })
                @Html.ValidationMessageFor(model => model.expr_corsId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentTools
            </label>
            <div class="col-md-10">
                <textarea name="expr_tools" id="expr_tools" class="form-control">@this.Model.expr_tools</textarea>

                @Html.ValidationMessageFor(model => model.expr_tools, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.doingOrNot
            </label>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.expr_state, htmlAttributes: new { @class = "form-control", @id = "expr_state" })
                @Html.ValidationMessageFor(model => model.expr_state, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" id="ExecutionDate">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentDate
            </label>
            <div class="col-md-10">
                <input type="text" name="expr_ExecutionDate" class="form-control pull-right" id="single_cal2" value="@Model.expr_ExecutionDate" />
                @Html.ValidationMessageFor(model => model.expr_ExecutionDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentTeacherName
            </label>
            <div class="col-md-10">
                @Html.DropDownList("expr_teachId", null, htmlAttributes: new { @class = "form-control selector" })

                @Html.ValidationMessageFor(model => model.expr_teachId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.Experiment.experimentTeacherSignetcher
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expr_teacherSignature, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expr_teacherSignature, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Laboratories.Web.Resources.General.Edit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#expr_state").change(function () {
            if ($("#expr_state").val() == 0) {
                $("#ExecutionDate").show();

            }
            else {
                $("#ExecutionDate").hide();
            }


        });
    </script>
}