@model Laboratories.Domain.StudentGradesDet

@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Edit;
}





@using (Html.BeginForm("Update", "StudentExamesGrade", FormMethod.Post))
{
<div class="form-horizontal">
    <h4 align="center" class="panel-title ">
        <strong style="text-align:center;color:red">@Laboratories.Web.Resources.StudentRates.studentRates </strong>
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.stdGD_studentGradesHedId)

    @Html.HiddenFor(model => model.stdGD_studentId)
    @Html.HiddenFor(model => model.stdGD_rate)
    <div class="form-group">
        <label class="control-label col-md-2">
            @Laboratories.Web.Resources.General.arName
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.stdGD_Student.std_arName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">@Laboratories.Web.Resources.StudentRates.degree</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.stdGD_degree, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.stdGD_degree, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Laboratories.Web.Resources.General.Edit" class="btn btn-primary" />
        </div>
    </div>
</div>
}


<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
