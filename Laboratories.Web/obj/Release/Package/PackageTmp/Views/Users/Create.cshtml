@model Laboratories.Domain.User

@{
    ViewBag.Title = @Laboratories.Web.Resources.General.Create;
}

<h2> @Laboratories.Web.Resources.General.Create</h2>

@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center" class="panel-title ">
            <strong style="text-align:center;color:red">@Laboratories.Web.Resources.General.Users </strong>
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.arName
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.usr_arName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usr_arName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.enName
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.usr_enName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usr_enName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.role
            </label>
            <div class="col-md-10">
                @Html.DropDownList("usr_roleId", null, htmlAttributes: new { @class = "form-control selector"})

                @Html.ValidationMessageFor(model => model.usr_roleId, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.Schools
            </label>
            <div class="col-md-10">
                @Html.DropDownList("usr_schId", null, htmlAttributes: new { @class = "form-control selector" })
                @Html.ValidationMessageFor(model => model.usr_schId, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.PassWord
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.usr_pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usr_pass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                @Laboratories.Web.Resources.General.photo
            </label>
            <div class="col-md-10">
                <input type="file" name="usr_image"  accept="image/png, image/gif, image/jpeg"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Laboratories.Web.Resources.General.Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Laboratories.Web.Resources.General.backToList, "Index")
</div>
